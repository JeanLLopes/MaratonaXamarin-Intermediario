<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MonkeyHubApp.App">
	<Application.Resources>
        
        <!--AQUI NOS PODEMOS CRIAR UM ESTILO PARA NOSSA PAGINA
        ENTRAO REFERENCIAMOS PELO x:key-->

        <ResourceDictionary>
            <Color x:Key="ColorBlue">Blue</Color>
            <Color x:Key="ColorWhite">White</Color>
            <Font x:Key="FontLarge">Large</Font>

            <!--PODEMOS TAMBEM CRIAR ESTILOS-->
            <Style x:Key="Danger" TargetType="Button">
                <Setter Property="BackgroundColor" Value="Red"></Setter>
                <Setter Property="Font" Value="{StaticResource FontLarge}"></Setter>
            </Style>

            <Style x:Key="Info" TargetType="Button">
                <Setter Property="BackgroundColor" Value="Blue"></Setter>
                <Setter Property="Font" Value="Large"></Setter>
            </Style>
        </ResourceDictionary>

    </Application.Resources>
</Application>